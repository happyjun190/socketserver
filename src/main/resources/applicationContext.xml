<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.0.xsd 
       					">
	
	<import resource="applicationContext-dao.xml" />
	<import resource="applicationContext-service.xml" />
	
	<context:component-scan base-package="com.socketserver.chat.configuration" />

	<!-- 引入属性文件 -->
	<context:property-placeholder location="classpath:jdbc1.properties,classpath:redis.properties" />
	<!-- 引入同文件夹下的mybatis属性配置文件 -->
	<import resource="applicationContext-mybatis.xml" />

	<!-- 引入同文件夹下的redis属性配置文件 -->
	<!-- <import resource="applicationContext-redis.xml" /> -->
	
	<!-- 引入同文件夹下的netty配置文件 -->
	<import resource="applicationContext-netty.xml" />
	
	<!-- 引入同文件夹下的repository属性配置文件 -->
	<import resource="applicationContext-repositories.xml" />
	
	<!-- 引入同文件夹下的cache属性配置文件 -->
	<import resource="applicationContext-cache.xml" />
	
	<!-- 引入同文件夹下的redis属性配置文件 -->
	<!-- <import resource="applicationContext-redis.xml" /> -->
</beans>
